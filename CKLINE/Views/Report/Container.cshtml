@model IEnumerable<CKLINE.Models.Container>

@{
    ViewBag.Title = "Container";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        งานลากตู้คอนเทรนเนอร์

    </h1>

</section>
<section class="content">
    <div class="box">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">ค้นหา</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                </div>
            </div>
            <div class="box-body">
                <form class="form-horizontal">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="date" class="col-sm-2 control-label">วันที่</label>
                            <div class="col-sm-10">
                                <div class='input-group date' id='datetimepicker1'>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                    <input type='text' class="form-control" id="uxdatetimepicker" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">คำค้น</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control" id="inputEmail3" placeholder="คำค้น">
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">ค้นหา</button>
                    </div><!-- /.box-footer -->
                </form>
            </div><!-- /.box-body -->

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">รายละเอียด</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>

                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="table-responsive">
                        <table class="table no-margin">
                            <thead>
                                <tr>
                                    <th>
                                        วันที่
                                    </th>
                                    <th>
                                        เที่ยวที่
                                    </th>
                                    <th>
                                        ทะเบียนหัว
                                    </th>
                                    <th>
                                        ทะเบียนหาง
                                    </th>
                                    <th>
                                        ขาไป
                                    </th>
                                    <th>
                                        ลูกค้า
                                    </th>
                                    <th>
                                        ขากลับ
                                    </th>
                                    <th>
                                        ลูกค้า
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TurnNumber)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Head)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tail)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RouteGo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Customer)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RouteBack)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.CustomerBack)
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <a href="@Url.Action("ExportContainerToExcel", "Report")" class="btn btn-sm btn-info btn-flat pull-right">Export to Excel</a>
                    <a href="@Url.Action("ViewContainer", "Report")" class="btn btn-sm btn-default btn-flat pull-left">View</a>
                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#uxdatetimepicker').daterangepicker({
            "locale": {
                "format": "DD/MM/YYYY"
            },
            "startDate": moment().format("DD/MM/YYYY"),
            "endDate": moment().add(30, "days").calendar()
        });
    });
</script>